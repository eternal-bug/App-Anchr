[% INCLUDE header.tt2 %]

#----------------------------#
# Run
#----------------------------#

[% IF opt.uniq -%]
[% current = 'uniq' -%]
#----------------------------#
# [% current %]
#----------------------------#
log_info "[% current %]"
if [ ! -e R1.[% current %].fq.gz ]; then
[% IF args.1 -%]
    tally \
        --pair-by-offset --with-quality --nozip --unsorted \
        -i [% args.0 %] \
        -j [% args.1 %] \
        -o R1.[% current %].fq \
        -p R2.[% current %].fq

    parallel --no-run-if-empty -j 1 "
        pigz -p [% opt.parallel %] {}.[% current %].fq
        " ::: R1 R2
[% ELSE -%]
    tally \
        --with-quality --nozip --unsorted \
        -i [% args.0 %] \
        -o R1.[% current %].fq

    pigz -p [% opt.parallel %] R1.[% current %].fq
[% END -%]
fi
[% prev = 'uniq' -%]
[% END -%]

[% IF opt.shuffle -%]
[% current = 'shuffle' -%]
#----------------------------#
# [% current %]
#----------------------------#
log_info "[% current %]"
if [ ! -e R1.[% current %].fq.gz ]; then
[% IF args.1 -%]
    shuffle.sh \
[% IF prev -%]
        in=R1.[% prev %].fq.gz \
        in2=R2.[% prev %].fq.gz \
[% ELSE -%]
        in=[% args.0 %] \
        in2=[% args.1 %] \
[% END -%]
        out=R1.[% current %].fq \
        out2=R2.[% current %].fq

    parallel --no-run-if-empty -j 1 "
        pigz -p [% opt.parallel %] {}.[% current %].fq
        " ::: R1 R2
[% ELSE -%]
    shuffle.sh \
[% IF prev -%]
        in=R1.[% prev %].fq.gz \
[% ELSE -%]
        in=[% args.0 %] \
[% END -%]
        out=R1.[% current %].fq

    pigz -p [% opt.parallel %] R1.[% current %].fq
[% END -%]
fi
[% prev = 'shuffle' -%]
[% END -%]

[% IF opt.sample -%]
[% current = 'sample' -%]
#----------------------------#
# [% current %]
#----------------------------#
log_info "[% current %]"
if [ ! -e R1.[% current %].fq.gz ]; then
[% IF args.1 -%]
    reformat.sh \
        sampleseed=[% opt.sample %] \
        samplebasestarget=[% opt.sample %] \
[% IF prev -%]
        in=R1.[% prev %].fq.gz \
        in2=R2.[% prev %].fq.gz \
[% ELSE -%]
        in=[% args.0 %] \
        in2=[% args.1 %] \
[% END -%]
        out=R1.[% current %].fq \
        out2=R2.[% current %].fq

    parallel --no-run-if-empty -j 1 "
        pigz -p [% opt.parallel %] {}.[% current %].fq
        " ::: R1 R2
[% ELSE -%]
    reformat.sh \
        sampleseed=[% opt.sample %] \
        samplebasestarget=[% opt.sample %] \
[% IF prev -%]
        in=R1.[% prev %].fq.gz \
[% ELSE -%]
        in=[% args.0 %] \
[% END -%]
        out=R1.[% current %].fq

    pigz -p [% opt.parallel %] R1.[% current %].fq
[% END -%]
fi
[% prev = 'sample' -%]
[% END -%]

[% IF opt.bbduk -%]
[% current = 'bbduk' -%]
#----------------------------#
# [% current %]
#----------------------------#
log_info "[% current %]"
if [ ! -e R1.[% current %].fq.gz ]; then
    bbduk.sh \
[% IF prev -%]
        in=R1.[% prev %].fq.gz \
[% IF args.1 -%]
        in2=R2.[% prev %].fq.gz \
[% END -%]
[% ELSE -%]
        in=[% args.0 %] \
[% IF args.1 -%]
        in2=[% args.1 %] \
[% END -%]
[% END -%]
        out=R1.[% current %].fq.gz \
[% IF args.1 -%]
        out2=R2.[% current %].fq.gz \
[% END -%]
        ref=[% opt.adapter %] \
        threads=[% opt.parallel %] \
        ktrim=r k=23 mink=11 hdist=1 tbo tpe \
        ftm=5 ordered overwrite \
        stats=trimming.stats.txt
fi
[% prev = 'bbduk' -%]
[% END -%]

[% IF not opt.nosickle -%]
[% current = 'sickle' -%]
#----------------------------#
# [% current %]
#----------------------------#
log_info "[% current %]"
if [ ! -e R1.[% current %].fq.gz ]; then
[% IF args.1 -%]
    sickle pe \
        -t sanger \
        -l [% opt.len %] \
        -q [% opt.qual %] \
[% IF prev -%]
        -f R1.[% prev %].fq.gz \
        -r R2.[% prev %].fq.gz \
[% ELSE -%]
        -f [% args.0 %] \
        -r [% args.1 %] \
[% END -%]
        -o R1.[% current %].fq \
        -p R2.[% current %].fq \
        -s Rs.[% current %].fq

    parallel --no-run-if-empty -j 1 "
        pigz -p [% opt.parallel %] {}.[% current %].fq
        " ::: R1 R2 Rs
[% ELSE -%]
    sickle se \
        -t sanger \
        -l [% opt.len %] \
        -q [% opt.qual %] \
[% IF prev -%]
        -f R1.[% prev %].fq.gz \
[% ELSE -%]
        -f [% args.0 %] \
[% END -%]
        -o R1.sickle.fq

    pigz -p [% opt.parallel %] R1.[% current %].fq
[% END -%]
fi
[% prev = 'sickle' -%]

#----------------------------#
# outputs
#----------------------------#
mv R1.sickle.fq.gz [% opt.basename %]1.sickle.fq.gz
[% IF args.1 -%]
mv R2.sickle.fq.gz [% opt.basename %]2.sickle.fq.gz
mv Rs.sickle.fq.gz [% opt.basename %]s.sickle.fq.gz
[% END -%]

[% END -%]

exit 0
